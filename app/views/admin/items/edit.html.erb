      
    <h4>商品編集</h4>  
      
      <%= form_with model: @item,url: admin_item_path(@item.id), method: :patch do |f| %>
          
        <div>
          商品画像
          <%= f.file_field :image, accept: "image/*" %>
        </div>
            
        <div>
          商品名
          <%= f.text_field :name %>
        </div>
            
        <div>
          商品説明
          <%= f.text_area :introduction %>
        </div>
        
        <div>
          税抜価格
          <%= f.number_field :price %>
        </div>
        
        <p><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></p>
        
        <% end %>