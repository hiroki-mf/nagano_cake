<!DOCTYPE html>
<html>
 <head></head>

 <body>
    <main>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
      <div class="row">
      <div class="col-md-3">


        <h4>商品一覧</h4>

          <% @items.each do |item| %>

            <div>
              <% if item.image.attached? %>
                <%= image_tag item.image, size: "300x300" %>
              <% else %>
                <%= image_tag 'no_image', size: "300x300" %>
              <% end %>
            </div>
            <div><%= item.name %></div>
            <div><%= item.price %></div>

          <% end %>

      </div>
      </div>
      </div>
    </main>
   </body>
</html>